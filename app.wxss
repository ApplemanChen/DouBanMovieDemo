/**app.wxss**/
page{
	font-family: "Microsoft YaHei";
	display: flex;
	flex-direction: column;
}

.page-header{
	display: flex;
	justify-content: center;
	border-bottom: solid 4rpx #ccc;
	border-top: solid 4rpx #ccc;
	/*固定顶部区域*/
	position: fixed;
	top: 0rpx;
	z-index: 1;
	height: 100rpx;
	width: 100%;
	background-color: #fff;
}

.page-header-text{
	color: #999;
	font-size: 40rpx;
	padding: 20rpx 40rpx;
}

.page-body{
	position: absolute;
	top:100rpx;
	display: flex;
	flex-direction: column;
	/*撑满剩余空间*/
	flex: 1;
}

.item{
	display: flex;
	flex-direction: row;
	padding: 20rpx 40rpx;
	border-bottom: solid 2rpx #ccc;
}

.item .poster{
	width: 140rpx;
	height:140rpx;
	margin-right: 20rpx;
}

.item .meta{
	/*撑满剩余空间*/
	flex: 1;	
}

.item .title,.item .sub-title{
	display: block;
}

.item .title{
	font-size: 35rpx;
	color:black;
}

.item .sub-title{
	font-size: 30rpx;
	color: #999;
}

.item .directors{
	font-size: 30rpx;
	color: #c0c0c0;
}

.item .rating{
	color: #f00000;
}

